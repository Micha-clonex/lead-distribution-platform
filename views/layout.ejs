<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Lead Distribution Platform' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <style>
        .sidebar {
            min-height: 100vh;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
        }
        .sidebar .nav-link {
            color: #333;
        }
        .sidebar .nav-link.active {
            color: #0d6efd;
        }
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
        }
        .status-badge {
            font-size: 0.75rem;
        }
        .main-content {
            margin-left: 0;
        }
        @media (min-width: 768px) {
            .main-content {
                margin-left: 250px;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse position-fixed">
        <div class="position-sticky pt-3">
            <h4 class="px-3 mb-4 text-primary">
                <i class="fas fa-share-alt me-2"></i>Lead Distribution
            </h4>
            
            <% if (isLoggedIn) { %>
            <div class="px-3 mb-3">
                <div class="alert alert-success py-2 mb-2">
                    <small>
                        <i class="fas fa-user-shield me-1"></i>
                        Logged in as: <strong><%= currentUser %></strong>
                    </small>
                </div>
            </div>
            <% } %>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link <%= (currentPath === '/') ? 'active' : '' %>" href="/">
                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= (currentPath.includes('/partners')) ? 'active' : '' %>" href="/partners">
                        <i class="fas fa-users me-2"></i>Partners
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= (currentPath.includes('/leads')) ? 'active' : '' %>" href="/leads">
                        <i class="fas fa-user-plus me-2"></i>Leads
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= (currentPath.includes('/webhooks')) ? 'active' : '' %>" href="/webhooks">
                        <i class="fas fa-plug me-2"></i>Webhooks
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= (currentPath.includes('/email-templates')) ? 'active' : '' %>" href="/email-templates">
                        <i class="fas fa-envelope-open-text me-2"></i>Email Templates
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= (currentPath.includes('/analytics')) ? 'active' : '' %>" href="/analytics">
                        <i class="fas fa-chart-bar me-2"></i>Analytics
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= (currentPath.includes('/quality')) ? 'active' : '' %>" href="/quality">
                        <i class="fas fa-star me-2"></i>Quality Scoring
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= (currentPath.includes('/business-hours')) ? 'active' : '' %>" href="/business-hours">
                        <i class="fas fa-clock me-2"></i>Business Hours
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= (currentPath.includes('/alerts')) ? 'active' : '' %>" href="/alerts">
                        <i class="fas fa-exclamation-triangle me-2"></i>Alerts
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= (currentPath.includes('/partner-management')) ? 'active' : '' %>" href="/partner-management">
                        <i class="fas fa-robot me-2"></i>Auto Management
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= (currentPath === '/monitoring' || currentPath.startsWith('/monitoring/')) ? 'active' : '' %>" href="/monitoring">
                        <i class="fas fa-heartbeat me-2"></i>Live Monitoring
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= (currentPath.includes('/api-settings')) ? 'active' : '' %>" href="/api-settings">
                        <i class="fas fa-cogs me-2"></i>API Settings
                    </a>
                </li>
                
                <% if (isLoggedIn) { %>
                <li class="nav-item mt-3 border-top pt-3">
                    <form action="/admin/logout" method="POST" style="margin: 0;">
                        <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                            <i class="fas fa-sign-out-alt me-2"></i>Logout
                        </button>
                    </form>
                </li>
                <% } %>
            </ul>
        </div>
    </nav>

    <!-- Main content -->
    <main class="main-content">
        <div class="container-fluid py-4">
            <!-- Alert messages -->
            <% if (typeof req !== 'undefined' && req.query) { %>
                <% if (req.query.success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= req.query.success %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
                <% if (req.query.error) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= req.query.error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>
            <% } %>
            
            <%- body %>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        // Initialize DataTables
        $(document).ready(function() {
            $('.data-table').DataTable({
                pageLength: 25,
                responsive: true,
                order: [[0, 'desc']]
            });
        });
        
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
</body>
</html>