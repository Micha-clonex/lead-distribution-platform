<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Lead Management</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#injectLeadModal">
            <i class="fas fa-plus-circle me-2"></i>Inject Lead
        </button>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" class="row g-3">
            <div class="col-md-2">
                <label class="form-label">Status</label>
                <select name="status" class="form-select">
                    <option value="">All Status</option>
                    <% statuses.forEach(status => { %>
                        <option value="<%= status %>" <%= (currentFilters.status === status) ? 'selected' : '' %>>
                            <%= status.charAt(0).toUpperCase() + status.slice(1) %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Country</label>
                <select name="country" class="form-select">
                    <option value="">All Countries</option>
                    <% countries.forEach(country => { %>
                        <option value="<%= country %>" <%= (currentFilters.country === country) ? 'selected' : '' %>>
                            <%= country.charAt(0).toUpperCase() + country.slice(1) %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Niche</label>
                <select name="niche" class="form-select">
                    <option value="">All Niches</option>
                    <% niches.forEach(niche => { %>
                        <option value="<%= niche %>" <%= (currentFilters.niche === niche) ? 'selected' : '' %>>
                            <%= niche.charAt(0).toUpperCase() + niche.slice(1) %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Type</label>
                <select name="type" class="form-select">
                    <option value="">All Types</option>
                    <% types.forEach(type => { %>
                        <option value="<%= type %>" <%= (currentFilters.type === type) ? 'selected' : '' %>>
                            <%= type.charAt(0).toUpperCase() + type.slice(1) %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">&nbsp;</label>
                <div>
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-filter me-1"></i>Filter
                    </button>
                    <a href="/leads" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-1"></i>Clear
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Leads Table -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="fas fa-user-plus me-2"></i>Leads (<%= leads.length %>)
        </h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Country</th>
                        <th>Niche</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Partner</th>
                        <th>Source</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% leads.forEach(lead => { %>
                        <tr>
                            <td><%= lead.id %></td>
                            <td><%= lead.first_name %> <%= lead.last_name %></td>
                            <td><%= lead.email %></td>
                            <td><%= lead.phone || '-' %></td>
                            <td>
                                <span class="badge bg-info">
                                    <%= lead.country.charAt(0).toUpperCase() + lead.country.slice(1) %>
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-<%= lead.niche === 'forex' ? 'success' : 'warning' %>">
                                    <%= lead.niche.charAt(0).toUpperCase() + lead.niche.slice(1) %>
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-<%= lead.type === 'premium' ? 'primary' : 'secondary' %>">
                                    <%= lead.type.charAt(0).toUpperCase() + lead.type.slice(1) %>
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-<%= 
                                    lead.status === 'converted' ? 'success' : 
                                    (lead.status === 'distributed' ? 'info' : 
                                    (lead.status === 'failed' ? 'danger' : 'warning')) %>">
                                    <%= lead.status.charAt(0).toUpperCase() + lead.status.slice(1) %>
                                </span>
                            </td>
                            <td><%= lead.partner_name || '-' %></td>
                            <td>
                                <small class="text-muted"><%= lead.source %></small>
                            </td>
                            <td><%= new Date(lead.created_at).toLocaleDateString() %></td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-outline-primary" onclick="viewLead(<%= lead.id %>)" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <% if (lead.status === 'pending' || lead.status === 'failed') { %>
                                    <button class="btn btn-outline-success" onclick="redistributeLead(<%= lead.id %>)" title="Redistribute">
                                        <i class="fas fa-redo"></i>
                                    </button>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Inject Lead Modal -->
<div class="modal fade" id="injectLeadModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form action="/leads/inject" method="POST">
                <div class="modal-header">
                    <h5 class="modal-title">Inject New Lead</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">First Name *</label>
                            <input type="text" class="form-control" name="first_name" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Last Name *</label>
                            <input type="text" class="form-control" name="last_name" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Email *</label>
                            <input type="email" class="form-control" name="email" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Phone</label>
                            <input type="tel" class="form-control" name="phone">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Country *</label>
                            <select class="form-select" name="country" required>
                                <option value="">Select Country</option>
                                <% countries.forEach(country => { %>
                                    <option value="<%= country %>"><%= country.charAt(0).toUpperCase() + country.slice(1) %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Niche *</label>
                            <select class="form-select" name="niche" required>
                                <option value="">Select Niche</option>
                                <% niches.forEach(niche => { %>
                                    <option value="<%= niche %>"><%= niche.charAt(0).toUpperCase() + niche.slice(1) %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Type *</label>
                            <select class="form-select" name="type" required>
                                <option value="">Select Type</option>
                                <% types.forEach(type => { %>
                                    <option value="<%= type %>"><%= type.charAt(0).toUpperCase() + type.slice(1) %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Source *</label>
                        <input type="text" class="form-control" name="source" value="manual" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Inject Lead</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function viewLead(id) {
    fetch(`/leads/${id}`)
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showLeadDetailsModal(data.lead);
            } else {
                alert('Failed to load lead details: ' + data.error);
            }
        })
        .catch(error => {
            console.error('Error fetching lead details:', error);
            alert('Failed to load lead details');
        });
}

function showLeadDetailsModal(lead) {
    const modalHtml = `
        <div class="modal fade" id="leadDetailsModal" tabindex="-1" aria-labelledby="leadDetailsModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="leadDetailsModalLabel">
                            <i class="fas fa-user me-2"></i>Lead Details - ${lead.first_name} ${lead.last_name}
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Lead Information -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h6 class="fw-bold mb-3"><i class="fas fa-info-circle me-2"></i>Lead Information</h6>
                                <table class="table table-sm">
                                    <tr><td><strong>ID:</strong></td><td>${lead.id}</td></tr>
                                    <tr><td><strong>Name:</strong></td><td>${lead.first_name} ${lead.last_name}</td></tr>
                                    <tr><td><strong>Email:</strong></td><td>${lead.email}</td></tr>
                                    <tr><td><strong>Phone:</strong></td><td>${lead.phone || 'N/A'}</td></tr>
                                    <tr><td><strong>Country:</strong></td><td><span class="badge bg-info">${lead.country}</span></td></tr>
                                    <tr><td><strong>Niche:</strong></td><td><span class="badge bg-${lead.niche === 'forex' ? 'success' : 'warning'}">${lead.niche}</span></td></tr>
                                    <tr><td><strong>Type:</strong></td><td><span class="badge bg-${lead.type === 'premium' ? 'primary' : 'secondary'}">${lead.type}</span></td></tr>
                                    <tr><td><strong>Source:</strong></td><td>${lead.source}</td></tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <h6 class="fw-bold mb-3"><i class="fas fa-chart-line me-2"></i>Status & Assignment</h6>
                                <table class="table table-sm">
                                    <tr><td><strong>Status:</strong></td><td><span class="badge bg-${getStatusBadgeColor(lead.status)}">${lead.status}</span></td></tr>
                                    <tr><td><strong>Assigned Partner:</strong></td><td>${lead.partner_name || 'Not assigned'}</td></tr>
                                    <tr><td><strong>Created:</strong></td><td>${new Date(lead.created_at).toLocaleString()}</td></tr>
                                    <tr><td><strong>Updated:</strong></td><td>${new Date(lead.updated_at).toLocaleString()}</td></tr>
                                    ${lead.converted_at ? `<tr><td><strong>Converted:</strong></td><td>${new Date(lead.converted_at).toLocaleString()}</td></tr>` : ''}
                                    ${lead.conversion_value ? `<tr><td><strong>Value:</strong></td><td>$${lead.conversion_value}</td></tr>` : ''}
                                </table>
                            </div>
                        </div>

                        <!-- Recovery Specific Data -->
                        ${lead.niche === 'recovery' && lead.data ? `
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3"><i class="fas fa-shield-alt me-2"></i>Recovery Information</h6>
                            <div class="row">
                                <div class="col-md-6">
                                    ${typeof lead.data === 'string' ? JSON.parse(lead.data).amount_lost : lead.data.amount_lost ? `<p><strong>Amount Lost:</strong> $${typeof lead.data === 'string' ? JSON.parse(lead.data).amount_lost : lead.data.amount_lost}</p>` : ''}
                                </div>
                                <div class="col-md-6">
                                    ${typeof lead.data === 'string' ? JSON.parse(lead.data).fraud_type : lead.data.fraud_type ? `<p><strong>Fraud Type:</strong> ${typeof lead.data === 'string' ? JSON.parse(lead.data).fraud_type : lead.data.fraud_type}</p>` : ''}
                                </div>
                            </div>
                        </div>
                        ` : ''}

                        <!-- Webhook Deliveries -->
                        <div class="mb-4">
                            <h6 class="fw-bold mb-3"><i class="fas fa-paper-plane me-2"></i>Webhook Delivery History</h6>
                            ${lead.deliveries && lead.deliveries.length > 0 ? `
                                <div class="table-responsive">
                                    <table class="table table-sm table-striped">
                                        <thead>
                                            <tr>
                                                <th>Partner</th>
                                                <th>Status</th>
                                                <th>Response</th>
                                                <th>Sent At</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            ${lead.deliveries.map(delivery => `
                                                <tr>
                                                    <td>${delivery.partner_name}</td>
                                                    <td><span class="badge bg-${delivery.status === 'success' ? 'success' : delivery.status === 'failed' ? 'danger' : 'warning'}">${delivery.status}</span></td>
                                                    <td class="text-muted small">${delivery.response_body ? delivery.response_body.substring(0, 50) + '...' : 'N/A'}</td>
                                                    <td>${new Date(delivery.created_at).toLocaleString()}</td>
                                                </tr>
                                            `).join('')}
                                        </tbody>
                                    </table>
                                </div>
                            ` : '<p class="text-muted">No webhook deliveries yet.</p>'}
                        </div>

                        <!-- Raw Data -->
                        ${lead.data ? `
                        <div class="mb-3">
                            <h6 class="fw-bold mb-3"><i class="fas fa-database me-2"></i>Raw Data</h6>
                            <pre class="bg-light p-3 rounded small">${JSON.stringify(typeof lead.data === 'string' ? JSON.parse(lead.data) : lead.data, null, 2)}</pre>
                        </div>
                        ` : ''}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        ${lead.status === 'pending' ? `<button type="button" class="btn btn-warning" onclick="redistributeLead(${lead.id}); bootstrap.Modal.getInstance(document.getElementById('leadDetailsModal')).hide();">Redistribute</button>` : ''}
                    </div>
                </div>
            </div>
        </div>
    `;
    
    // Remove any existing modal
    const existingModal = document.getElementById('leadDetailsModal');
    if (existingModal) {
        existingModal.remove();
    }
    
    // Add modal to page
    document.body.insertAdjacentHTML('beforeend', modalHtml);
    
    // Show modal
    const modal = new bootstrap.Modal(document.getElementById('leadDetailsModal'));
    modal.show();
}

function getStatusBadgeColor(status) {
    switch(status) {
        case 'pending': return 'warning';
        case 'distributed': return 'info';
        case 'converted': return 'success';
        case 'failed': return 'danger';
        default: return 'secondary';
    }
}

function redistributeLead(id) {
    if (confirm('Are you sure you want to redistribute this lead?')) {
        fetch(`/leads/${id}/redistribute`, {
            method: 'POST'
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Failed to redistribute lead: ' + data.message);
            }
        })
        .catch(error => {
            alert('Failed to redistribute lead');
        });
    }
}
</script>